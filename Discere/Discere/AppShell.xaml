<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Discere.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Discere"
    Title="Discere">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <FlyoutItem >
        <ShellContent Title="Home" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="AnswerPage" Route="AnswerPage" ContentTemplate="{DataTemplate local:AnswerPage}" />
    </FlyoutItem>

</Shell>

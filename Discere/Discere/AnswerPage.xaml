<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Discere.AnswerPage"
             Title="AnswerPage">
    <VerticalStackLayout Margin="10,0"
                         Spacing="20">
        <Border Padding="10">
            <VerticalStackLayout>
                <Label FontAttributes="Bold">Question</Label>
                <Border Margin="0,0,0,6" />
                <Label x:Name="LabelQuestion">Text</Label>
            </VerticalStackLayout>
        </Border>
        <Border Padding="10">
            <VerticalStackLayout>
                <Label FontAttributes="Bold">Correct Answer</Label>
                <Border Margin="0,0,0,6" />
                <Label x:Name="LabelAnswer">Text</Label>
            </VerticalStackLayout>
        </Border>
        <Border Padding="10">
            <VerticalStackLayout>
                <Label FontAttributes="Bold">Your Answer</Label>
                <Border Margin="0,0,0,6" />
                <Label x:Name="LabelUserAnswer">Text</Label>
            </VerticalStackLayout>
        </Border>
        <Border Padding="10">
            <VerticalStackLayout>
                <Label FontAttributes="Bold">AI Comment</Label>
                <Border Margin="0,0,0,6" />
                <Label x:Name="LabelAIComment">Text</Label>
            </VerticalStackLayout>
        </Border>
        <Button Text="Next"/>
    </VerticalStackLayout>
</ContentPage>